<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    android:id="@+id/card"
    android:layout_margin="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nama_user_seminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khidir wira sya'bani"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:maxLines="12"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textColor="@color/hitam"/>
                <TextView
                    android:id="@+id/nim_user_seminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F1B014050"
                    android:paddingLeft="10dp"
                    android:textSize="10sp"
                    android:textColor="@color/hitam" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUDUL : "
            android:textColor="@color/hitam"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="@dimen/top_margin_text"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/judul_seminar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Sistem Keamanan Informasi"
                android:textSize="14sp"
                android:textColor="@color/hitam"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/lokasi"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lab KOMPUTER dan Jaringan"
            android:textSize="12sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">
            <TextView
                android:id="@+id/tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-01-01"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="12sp"/>
            <TextView
                android:paddingLeft="3dp"
                android:id="@+id/jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00:00"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:paddingLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/fab_dosen_seminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionName="loginFab"
        
        android:src="@drawable/ic_signup"
        app:fabSize="normal" />
</RelativeLayout>