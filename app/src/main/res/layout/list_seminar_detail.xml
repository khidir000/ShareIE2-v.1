<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_seminar_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/gambar_user_seminar_detail"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@color/hitam"/>
        <TextView
            android:id="@+id/nama_user_seminar_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/hitam"
            android:text="judul"
            android:paddingTop="5dp"
            android:textStyle="bold"/>
            <TextView
                android:id="@+id/nim_user_seminar_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/hitam"
                android:text="judul"/>
            <TextView
                android:id="@+id/waktu_seminar_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:text="judul"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>